<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorAccent"
    tools:context=".BerkasActivity">

    <TextView
        android:id="@+id/imageNamaUsaha"
        android:background="@drawable/bg_form_name"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="fill_parent"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_height="40dp"
        android:id="@+id/imageNameCalon"
        android:background="@drawable/bg_form_name"
        android:layout_below="@+id/imageNamaUsaha"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <android.support.v7.widget.CardView
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:layout_above="@+id/layout_button"
        android:layout_below="@+id/imageNameCalon"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/layout_button"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnChoose"
            android:text="Pilih"
            android:textColor="@color/white"
            android:background="@drawable/bg_form_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnUpload"
            android:textColor="@color/white"
            android:background="@drawable/bg_form_name"
            android:text="Upload"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnNext"
            android:textColor="@color/white"
            android:background="@drawable/bg_form_name"
            android:text="Next"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>