<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fff"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow>

            <TextView
                android:id="@+id/nama_cabang"
                android:text="Nama Cabang"
                android:textSize="15sp"
                android:padding="3dp"/>
            <TextView
                android:text=":"
                android:textSize="15sp"
                android:padding="3dp" />
            <TextView
                android:id="@+id/list_cabang"
                android:text="NAMA CABANG"
                android:textSize="15sp"
                android:padding="3dp"/>

        </TableRow>
        <TableRow>
            <TextView
                android:text="Nama"
                android:textSize="15sp"
                android:padding="3dp" />
            <TextView
                android:text=":"
                android:textSize="15sp"
                android:padding="3dp" />
            <TextView
                android:id="@+id/list_nama"
                android:layout_width="wrap_content"
                android:text="NAMA KARYAWAN BARU YANG SANGAT PANJANG SEKALI"
                android:textSize="15sp"
                android:padding="3dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Jabatan"
                android:textSize="15sp"
                android:padding="3dp"/>
            <TextView
                android:text=":"
                android:textSize="15sp"
                android:padding="3dp" />
            <TextView
                android:id="@+id/list_job"
                android:text="POSISI / JABATAN"
                android:textSize="15sp"
                android:padding="3dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="No. Absensi"
                android:padding="3dp"
                android:textSize="15sp" />
            <TextView
                android:text=":"
                android:textSize="15sp"
                android:padding="3dp" />
            <TextView
                android:id="@+id/list_absensi"
                android:padding="3dp"
                android:text="NOMOR ABSENSI"
                android:textSize="15sp" />
        </TableRow>
    </TableLayout>
</android.support.v7.widget.CardView>