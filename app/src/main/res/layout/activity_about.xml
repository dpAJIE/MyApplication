<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:padding="16dp"
    tools:context=".AboutActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:contentPadding="5dp">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/header_info"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/new_logo_cdn" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:contentPadding="10dp">

        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="Hubungi kami"
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="PT. Capella Dinamik Nusantara"
                android:layout_marginBottom="10dp"
                android:id="@+id/info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Dwi Prasetya Aji"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/info1"
                android:id="@+id/info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="dwi_wsh@cdn.co.id"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/info2"
                android:id="@+id/info3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="0812-6141-9549"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/info3"
                android:id="@+id/info4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>